<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arthurbochard.cctexier.mychatapplication.NewMessageActivity">

    <TextView
        android:id="@+id/from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from" />

    <EditText
        android:id="@+id/newMessage1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightNewMessage"
        android:layout_below="@+id/welcome_text"
        android:hint="@string/newMessage" />


    <Button
        android:id="@+id/button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newMessage1"
        android:layout_marginTop="@dimen/activity_vertical_marginButton"
        android:text="Send New Message" />



</RelativeLayout>
