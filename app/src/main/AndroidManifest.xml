<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arthurbochard.cctexier.mychatapplication" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UI.Activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.Activity.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name=".UI.Activity.ListActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity
            android:name=".UI.Activity.NewMessageActivity"
            android:label="@string/title_activity_new_message" >
        </activity>
        <activity
            android:name=".UI.Activity.RegisterActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
